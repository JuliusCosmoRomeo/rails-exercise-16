<h1>Listing authors</h1>
 
<table>
  <tr>
    <th>Name</th>
    <th>Homepage</th>
    
  </tr>
 
  <% @authors.each do |author| %>
    <%= author = @authors[0] %>
    <tr>
      <td><%= author.name %></td>
      <td><%= author.homepage %></td>
      <td><%= link_to 'Show', author_path(author) %></td>
      <td> <%= link_to 'Edit', edit_author_path(author)  %> </td>
      <td> <%= link_to 'Destroy', {action: :destroy, controller: :authors, id: author.id}, method: :delete  %> </td>
    </tr>
  <% end %>
  <%= link_to 'Add author', new_author_path %>
  
</table>